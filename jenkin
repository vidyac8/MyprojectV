pipeline {
	agent any
	tools {
    	maven 'local_maven'
	}
	stages {
    	stage('clean') {
        	steps {
        	sh "mvn clean"  	 
        	}
    	}
	
    	stage('Build') {
        	steps {
        	sh "mvn compile"  	 
        	}
    	}
   	stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
	
    	
}
}
