pipeline {
	agent any
	tools {
    	maven 'local_maven'
	}
	stages {
    	stage('clean') {
        	steps {
        	sh "mvn clean"  	 
        	}
    	}
	
    	stage('Build') {
        	steps {
        	sh "mvn compile"  	 
        	}
    	}
   	stage ('Test Cases Execution'){
		steps{
		sh "mvn clean org.jacoco:jacoco-maven-plugin:prepare-agent install -Pcoverage-per-test"
		}
	}
	post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
	
    	
}
}
